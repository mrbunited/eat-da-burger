<div class="main">
<img src="/assets/img/burger.png" alt="burger" height="200" width="200">
<h1 class="heading">Your Burgers List</h1>

 <section class="row">
        <div class="col-md-6 ul-div">
          
          <h2 class="heading">New burgers to devour!</h2>
<ul>
  {{#each burgers}}
 {{#unless devoured}}
{{> burgers/burger-block }}
  {{/unless}}
 {{/each}}
</ul>
        </div>          

<div class="col-md-6 ul-div">
          
          <h2 class="heading">Burgers that were devoured!</h2>
<ul>
  {{#each burgers}}
 {{#if devoured}}
{{> burgers/burger-block }}
{{/if}}
 {{/each}}
</ul>
        </div>     

</section>


<h1 class="heading">Add a Burger</h1>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger-name" name="name">
  </div>
  <button type="submit" id="new" class="btn btn-primary">Add a burger</button>
</form>
</div>